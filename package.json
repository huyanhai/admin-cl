{
  "name": "admin-cl",
  "version": "1.0.0",
  "description": "",
  "main": "lib/index.js",
  "module": "es/index.mjs",
  "unpkg": "dist/index.full.js",
  "jsdelivr": "dist/index.full.js",
  "workspaces": [
    "packages/*"
  ],
  "exports": {
    ".": {
      "require": "./lib/index.js",
      "import": "./es/index.mjs"
    },
    "./es": "./es/index.mjs",
    "./lib": "./lib/index.js",
    "./es/*.mjs": "./es/*.mjs",
    "./es/*": "./es/*.mjs",
    "./lib/*.js": "./lib/*.js",
    "./lib/*": "./lib/*.js",
    "./*": "./*"
  },
  "scripts": {
    "prepare": "husky install",
    "clear": "rm -rf node_modules **/*/node_modules",
    "lint": "eslint --fix . --ext .js,.ts,.tsx,.vue",
    "gen": "bash script/gen.sh",
    "gen-pkg": "bash script/gen-pkg.sh",
    "esno": "esno ./packages/components/index.ts",
    "clean": "pnpm run clean:dist && pnpm run -r --parallel clean",
    "clean:dist": "rm -rf dist",
    "build": "pnpm run -C internal/build start && pnpm run build:theme",
    "build:theme": "pnpm run -C packages/theme build",
    "demo": "pnpm run -C demo dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/huyanhai/base-templates.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/huyanhai/base-templates/issues"
  },
  "homepage": "https://github.com/huyanhai/base-templates#readme",
  "devDependencies": {
    "@admin-cl/build": "workspace:*",
    "@admin-cl/components": "workspace:*",
    "@admin-cl/constants": "workspace:*",
    "@admin-cl/utils": "workspace:*",
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@types/gulp": "^4.0.9",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.7.1",
    "fs-extra": "^10.1.0",
    "gulp": "^4.0.2",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.2",
    "sass": "^1.52.2",
    "shelljs": "^0.8.5",
    "stylelint": "^14.8.5",
    "stylelint-config-standard": "^25.0.0",
    "sucrase": "^3.21.0",
    "ts-morph": "^15.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "vitest": "^0.12.6",
    "vue": "^3.2.33"
  },
  "lint-staged": {
    "*.{less,scss}": [
      "stylelint --config  ./.stylelintrc --fix"
    ],
    "*.{ts,js,tsx,vue}": [
      "npm run lint",
      "prettier --write"
    ]
  }
}
